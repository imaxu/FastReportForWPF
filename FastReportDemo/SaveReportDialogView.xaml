<Window x:Class="FastReportDemo.SaveReportDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="保存模版对话框" Height="160" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60,*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <StackPanel Orientation="Horizontal" Margin="5" >
                <TextBlock Text="模版名称：" VerticalAlignment="Center" />
                <TextBox x:Name="txtTemplateName" Width="180" Height="25" VerticalAlignment="Center" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,30,0">
                <Button Width="60" Height="25"  Content="保存" Click="Button_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
